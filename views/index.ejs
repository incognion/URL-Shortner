<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>URL Shortner</title>
</head>

<body>
    <div class="container" style="margin-top: 20px;">
        <h1>URL Shrinker</h1>
        <form action="/shortUrls" method="post" class="my-4 form-inline">
            <label for="fullUrl" class="visually-hidden">URL</label>
            <input required placeholder="Enter Full URL" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2"><br>
            <button type="submit" class="btn btn-success">Shrink</button>
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl=>{ %>
                    <tr>
                        <td><a href="<%= shortUrl.full %>" target="_blank">
                                <%= shortUrl.full %>
                            </a></td>
                        <td><a href="<%= shortUrl.short %>" target="_blank">
                                <%= shortUrl.short %>
                                <!-- Shortened URL -->
                            </a></td>
                        <td>
                            <%= shortUrl.clicks %>
                        </td>
                    </tr>
                    <% }) %>

            </tbody>
        </table>
    </div>
</body>

</html>